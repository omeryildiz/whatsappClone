<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/chatIV"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true" />

    <LinearLayout
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/balloon_outgoing_normal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/groupChatName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="nomeryildiz@gmail.com"
            android:textSize="8sp" />


        <TextView
            android:id="@+id/groupChatTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="hello wassup"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/groupChatDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/groupChatTv"
            android:drawablePadding="5dp"
            android:text="27.10.1988 20:15"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>