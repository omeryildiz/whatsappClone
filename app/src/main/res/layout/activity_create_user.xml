<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/profileInfoTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Profile Info"
        android:textColor="#118C7E"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profileInfoMsgTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileInfoTV"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:text="@string/profile_info_msg" />


    <RelativeLayout
        android:id="@+id/newUserRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileInfoMsgTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newUserRL"

        >

        <EditText
            android:id="@+id/existingUserET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type your mail here" />


        <EditText
            android:id="@+id/passwordET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/existingUserET"
            android:hint="Type your password"
            android:inputType="textPassword" />


    </RelativeLayout>

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/carrierChargesTV"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_green_round_corners"
        android:text="Next"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/createButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/carrierChargesTV"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@+id/nextBtn"
        android:background="@drawable/btn_green_round_corners"
        android:text="Create"
        android:textColor="@color/white" />

</RelativeLayout>